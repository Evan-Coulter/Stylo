<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:elevation="3dp"
    android:layout_margin="12dp"
    android:elevation="3dp"
    android:background="@drawable/note_list_card_background">

    <TextView
        android:id="@+id/cardViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hello_world_this_is_my_really_long_title_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_v_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world_hello_world"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/cardViewContent"
        app:layout_constraintStart_toStartOf="@+id/cardViewContent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_curabitur_egestas_nibh_sed_efficitur_elementum_ex_justo_accumsan_massa_sit_amet_tempus_magna_tortor_id_ante_lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_curabitur_egestas_nibh_sed_efficitur_elementum_ex_justo_accumsan_massa"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewFAB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewTitle" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cardViewFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        app:fabCustomSize="48dp"
        android:backgroundTint="@color/off_white"
        android:src="@drawable/ic_round_more_horiz_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:borderWidth="0dp"
        app:elevation="4dp"
        android:contentDescription="@string/open_edit_note_details_option_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>
