<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/folder_membership_selection_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/folder_membership_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/folder_membership_selection_checkbox"
        app:layout_constraintTop_toTopOf="@id/folder_membership_selection_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/folder_membership_selection_checkbox"/>

</androidx.constraintlayout.widget.ConstraintLayout>